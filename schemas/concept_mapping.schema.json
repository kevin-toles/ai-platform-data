{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-platform-data/schemas/concept_mapping.schema.json",
  "title": "Concept Mapping Schema",
  "description": "JSON Schema for concept-to-code mappings. Represents matches between book concepts and repo implementations.",
  "type": "object",
  "required": ["generated_at", "total_pending", "by_book"],
  "additionalProperties": false,
  "properties": {
    "generated_at": {
      "type": "string",
      "description": "ISO 8601 timestamp of when mappings were generated",
      "format": "date-time"
    },
    "confidence_range": {
      "type": "object",
      "description": "Confidence thresholds used for classification",
      "properties": {
        "min": {
          "type": "number",
          "description": "Minimum confidence for review queue",
          "minimum": 0,
          "maximum": 1
        },
        "max": {
          "type": "number",
          "description": "Maximum confidence (auto-approve threshold)",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "total_pending": {
      "type": "integer",
      "description": "Total number of mappings pending review",
      "minimum": 0
    },
    "by_book": {
      "type": "object",
      "description": "Mappings grouped by book ID",
      "additionalProperties": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/concept_match"
        }
      }
    }
  },
  "definitions": {
    "concept_match": {
      "type": "object",
      "description": "A single concept-to-repo match",
      "required": ["book_id", "chapter_number", "concept", "repo_id", "score", "auto_approved"],
      "additionalProperties": false,
      "properties": {
        "book_id": {
          "type": "string",
          "description": "Book identifier"
        },
        "chapter_number": {
          "type": "integer",
          "description": "Chapter number (1-indexed)",
          "minimum": 1
        },
        "chapter_title": {
          "type": "string",
          "description": "Chapter title"
        },
        "concept": {
          "type": "string",
          "description": "The matched concept/keyword from the book"
        },
        "repo_id": {
          "type": "string",
          "description": "Matched repository identifier"
        },
        "repo_pattern": {
          "type": "string",
          "description": "The matching pattern/concept from the repo"
        },
        "score": {
          "type": "number",
          "description": "Semantic similarity score",
          "minimum": 0,
          "maximum": 1
        },
        "auto_approved": {
          "type": "boolean",
          "description": "Whether this match was auto-approved (score >= 0.85)"
        },
        "reviewed": {
          "type": "boolean",
          "description": "Whether a human has reviewed this match"
        },
        "approved": {
          "type": "boolean",
          "description": "Human approval decision (after review)"
        },
        "reviewed_by": {
          "type": "string",
          "description": "Username of reviewer"
        },
        "reviewed_at": {
          "type": "string",
          "description": "ISO 8601 timestamp of review",
          "format": "date-time"
        }
      }
    }
  }
}
