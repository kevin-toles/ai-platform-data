{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-platform-data/schemas/book_enriched_chapters.schema.json",
  "title": "Book Enriched Chapters Schema",
  "description": "JSON Schema for enriched book chapters with cross-references and similarity data. This is the intermediate format between metadata extraction and final platform ingestion.",
  "type": "object",
  "required": ["metadata", "chapters", "enrichment_provenance"],
  "additionalProperties": false,
  "properties": {
    "metadata": {
      "$ref": "#/definitions/book_metadata"
    },
    "chapters": {
      "type": "array",
      "description": "List of enriched chapters",
      "items": {
        "$ref": "#/definitions/enriched_chapter"
      },
      "minItems": 1
    },
    "total_chapters": {
      "type": "integer",
      "description": "Total number of chapters",
      "minimum": 1
    },
    "enrichment_provenance": {
      "$ref": "#/definitions/enrichment_provenance"
    }
  },
  "definitions": {
    "book_metadata": {
      "type": "object",
      "description": "Book-level metadata",
      "required": ["title"],
      "additionalProperties": true,
      "properties": {
        "title": {
          "type": "string",
          "description": "Book title",
          "minLength": 1
        },
        "author": {
          "type": "string",
          "description": "Book author(s)"
        },
        "publisher": {
          "type": "string",
          "description": "Publisher name"
        },
        "isbn": {
          "type": "string",
          "description": "ISBN identifier"
        },
        "total_pages": {
          "type": "integer",
          "description": "Total page count",
          "minimum": 1
        }
      }
    },
    "enriched_chapter": {
      "type": "object",
      "description": "A single enriched chapter",
      "required": ["chapter_number", "title"],
      "additionalProperties": true,
      "properties": {
        "chapter_number": {
          "type": "integer",
          "description": "Chapter number (1-indexed)",
          "minimum": 1
        },
        "title": {
          "type": "string",
          "description": "Chapter title"
        },
        "start_page": {
          "type": "integer",
          "description": "Starting page number",
          "minimum": 1
        },
        "end_page": {
          "type": "integer",
          "description": "Ending page number",
          "minimum": 1
        },
        "summary": {
          "type": "string",
          "description": "Chapter summary"
        },
        "keywords": {
          "type": "array",
          "description": "Extracted keywords",
          "items": {
            "type": "string"
          }
        },
        "concepts": {
          "type": "array",
          "description": "Extracted concepts",
          "items": {
            "type": "string"
          }
        },
        "similar_chapters": {
          "type": "array",
          "description": "Similar chapters (can be cross-book or intra-book)",
          "items": {
            "$ref": "#/definitions/chapter_reference"
          }
        },
        "topic_id": {
          "type": ["integer", "null"],
          "description": "BERTopic cluster ID (-1 for outliers, null if not available)"
        },
        "topic_name": {
          "type": ["string", "null"],
          "description": "Human-readable topic name"
        },
        "enriched_keywords": {
          "$ref": "#/definitions/enriched_keywords"
        },
        "chapter_provenance": {
          "$ref": "#/definitions/chapter_provenance"
        }
      }
    },
    "chapter_reference": {
      "type": "object",
      "description": "Reference to a similar/related chapter",
      "required": ["book", "chapter", "score"],
      "additionalProperties": false,
      "properties": {
        "book": {
          "type": "string",
          "description": "Book title/identifier"
        },
        "chapter": {
          "type": "integer",
          "description": "Chapter number",
          "minimum": 1
        },
        "title": {
          "type": "string",
          "description": "Chapter title"
        },
        "score": {
          "type": "number",
          "description": "Fused similarity score (0.0 to ~1.0, may slightly exceed due to boosts)",
          "minimum": 0.0,
          "maximum": 1.1
        },
        "base_score": {
          "type": "number",
          "description": "Raw SBERT similarity score before fusion",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "topic_boost": {
          "type": "number",
          "description": "Boost applied for same-topic chapters",
          "minimum": 0.0
        },
        "concept_overlap": {
          "type": ["number", "null"],
          "description": "EEP-3.2: Concept Jaccard overlap score (null for backward compat)",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "keyword_jaccard": {
          "type": ["number", "null"],
          "description": "EEP-3.3: Keyword Jaccard similarity score (null for backward compat)",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "matched_concepts": {
          "type": "array",
          "description": "EEP-3.2: List of concepts that matched between chapters",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "relationship_type": {
          "type": ["string", "null"],
          "description": "EEP-4.4: Graph relationship type (PARALLEL, PERPENDICULAR, SKIP_TIER). Null for backward compat.",
          "enum": ["PARALLEL", "PERPENDICULAR", "SKIP_TIER", null]
        },
        "method": {
          "type": "string",
          "description": "Similarity method used",
          "enum": ["sbert", "tfidf", "bertopic", "hybrid", "cosine_similarity", "api", "multi-signal"]
        }
      }
    },
    "enriched_keywords": {
      "type": "object",
      "description": "Multi-method keyword extraction results",
      "additionalProperties": false,
      "properties": {
        "tfidf": {
          "type": "array",
          "items": { "type": "string" }
        },
        "semantic": {
          "type": "array",
          "items": { "type": "string" }
        },
        "merged": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "chapter_provenance": {
      "type": "object",
      "description": "Processing provenance for this chapter",
      "additionalProperties": false,
      "properties": {
        "methods_used": {
          "type": "array",
          "items": { "type": "string" }
        },
        "sbert_score": {
          "type": "number"
        },
        "topic_boost": {
          "type": "number"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "enrichment_provenance": {
      "type": "object",
      "description": "Enrichment processing provenance",
      "required": ["enrichment_method", "enrichment_date"],
      "additionalProperties": true,
      "properties": {
        "enrichment_method": {
          "type": "string",
          "description": "Method used for enrichment",
          "enum": ["msep", "tfidf", "semantic_search", "api", "local"]
        },
        "enrichment_date": {
          "type": "string",
          "description": "ISO 8601 timestamp",
          "format": "date-time"
        },
        "model_version": {
          "type": "string",
          "description": "Version of the enrichment model/service"
        },
        "processing_time_ms": {
          "type": "number",
          "description": "Processing time in milliseconds",
          "minimum": 0
        },
        "total_similar_chapters": {
          "type": "integer",
          "description": "Total number of similar chapter references generated",
          "minimum": 0
        },
        "source_metadata_file": {
          "type": "string",
          "description": "Source metadata file used for enrichment"
        }
      }
    }
  }
}
