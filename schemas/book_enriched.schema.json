{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-platform-data/schemas/book_enriched.schema.json",
  "title": "Book Enriched Schema",
  "description": "JSON Schema for fully enriched books with embeddings, graph relationships, and vector store references. Represents the final processed state of a book in the AI platform.",
  "type": "object",
  "required": ["id", "metadata", "embeddings"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the book",
      "minLength": 1,
      "pattern": "^[a-z0-9-]+$"
    },
    "metadata": {
      "$ref": "#/definitions/embedded_metadata"
    },
    "embeddings": {
      "$ref": "#/definitions/embeddings_info"
    },
    "graph": {
      "$ref": "#/definitions/graph_info"
    },
    "vector_store": {
      "$ref": "#/definitions/vector_store_info"
    }
  },
  "definitions": {
    "embedded_metadata": {
      "type": "object",
      "description": "Embedded metadata for the enriched book",
      "required": ["title", "author", "tier"],
      "additionalProperties": true,
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the book",
          "minLength": 1
        },
        "author": {
          "type": "string",
          "description": "The author(s) of the book",
          "minLength": 1
        },
        "tier": {
          "type": "string",
          "description": "Taxonomy tier classification",
          "minLength": 1
        },
        "domains": {
          "type": "array",
          "description": "List of domain classifications",
          "items": {
            "type": "string"
          }
        },
        "concepts": {
          "type": "array",
          "description": "List of key concepts",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "embeddings_info": {
      "type": "object",
      "description": "Information about the generated embeddings",
      "required": ["model", "dimensions"],
      "additionalProperties": false,
      "properties": {
        "model": {
          "type": "string",
          "description": "The embedding model used (e.g., sentence-transformers/all-MiniLM-L6-v2)",
          "minLength": 1
        },
        "dimensions": {
          "type": "integer",
          "description": "Number of dimensions in the embedding vectors",
          "minimum": 1
        },
        "created_at": {
          "type": "string",
          "description": "ISO 8601 timestamp of when embeddings were created",
          "format": "date-time"
        }
      }
    },
    "graph_info": {
      "type": "object",
      "description": "Neo4j graph database references",
      "additionalProperties": false,
      "properties": {
        "neo4j_node_id": {
          "type": "string",
          "description": "The node ID in Neo4j graph database"
        },
        "relationships": {
          "type": "array",
          "description": "List of relationship types this book has",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "vector_store_info": {
      "type": "object",
      "description": "Qdrant vector store references",
      "additionalProperties": false,
      "properties": {
        "qdrant_collection": {
          "type": "string",
          "description": "The Qdrant collection name"
        },
        "point_ids": {
          "type": "array",
          "description": "List of point IDs in the Qdrant collection",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
